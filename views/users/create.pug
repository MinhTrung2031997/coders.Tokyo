extends ../layouts/common

block content
    h1 Crete user

    if errors
        each error in errors
            .alert.alert-danger= error
    form(action="/users/create" , method="POST" )
        .form-group
            label(for="name") Name
            input#name(type="text" , name="name" , class="form-control" , value= values ? values.name : "")

        .form-group
            label(for="phone") phone
            input#phone(type="text" , name="phone" , class="form-control" , value= values ? values.phone : "")

            button.btn.btn-primary.mt-2 create
